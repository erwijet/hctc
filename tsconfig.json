{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "outDir": "./dist",
    "moduleResolution": "node",

    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
